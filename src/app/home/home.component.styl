$naik-blue = #202d43
$naik-yellow = #f3bd3c
$naik-orange = #da4f35

.um-section
  &--about
    background #202d43
    color white
    .um-img
      &--circle
        height 80vh
        width 80vh
        border-radius 0 50% 50% 0
      &--about-us
        position absolute
        right 10vh
        top 3vh
        background url("/assets/images/about-us.jpg")
        background-size cover
        background-position 50% 50%

  &--products
    background-image linear-gradient(white, #cccacd) //#e6e6e6)
    &__info
      min-height 80vh
      margin 3em 0 1em
    .um-img--glasses
      margin-top -30px
      height 85vh
      width 100%
      background url("/assets/images/product1.jpg")
      background-size cover
      background-position 50% 50%

  &--demo
    background-image: linear-gradient(135deg, darken(#355691, 10), #355691, lighten(#355691, 15));
    .um-title
      color #fafafa
    .um-btn
      border solid 1px $naik-yellow
      letter-spacing 2px
      font-size 2em
      color $naik-yellow
      width 30vh
      height 10vh
      display flex
      justify-content center
      align-items center
      &:hover
        background $naik-yellow
        color #fafafa
        text-decoration none

  &--contact
    background url("/assets/images/contact.jpg")
    background-position 50% 50%
    background-size cover
    color white
    padding 0
    .um-title
      text-align center

  &--footer
        background-color $naik-blue
        color white
        min-height 50px
        font-size 12px
        letter-spacing 1px
        font-weight 100
        padding 2em 3em
        text-align center


.um-background
  &--image-1
    background url("/assets/images/product2.jpg")
    background-size cover
    background-position 50% 50%
    &.um-box-container
      color white
      border solid 2px $naik-orange
      .um-title
        background $naik-orange
      .um-text
        background rgba(black, .4)
  &--image-2
    background url("/assets/images/product4.jpg")
    background-size cover
    background-position 50% 50%
    &.um-box-container
      color white
      border solid 2px $naik-blue
      .um-title
        background $naik-blue
      .um-text
        background rgba(black, .5)
  &--image-3
    background url("/assets/images/product3.jpg")
    background-size cover
    background-position 50% 50%
    &.um-box-container
      color white
      border solid 2px $naik-yellow
      .um-title
        background $naik-yellow
      .um-text
        background rgba(black, .6)


.um-background-layer
  width 100%
  background rgba(black, .5)
  padding 3em 2em


.um-box-container
  margin 1em 0
  &__title
    text-transform uppercase
    padding .5em 0
    color white
    text-align center
    font-size 18px
  &__text
    padding 1em .5em
    ul
      min-height 35vh
      margin 0
      padding 0
      display flex
      flex-direction column
      justify-content space-evenly
    li
      text-align center
      padding .5em
      font-size 16px
      list-style none
      &:not(:last-child)
        border-bottom solid 1px #fafafa


.um-title
  padding-bottom 1em

.um-text
  font-size 1.2em

.um-about
  color white
  width 100%

.um-header-text
  letter-spacing 2px
  font-weight 100

.um-navbar
  width 100%

.navbar
  padding 1rem 3rem
  border-bottom 4px solid #dcefe9
  background #fafafa
  &:hover
    .img-fluid
      width 115px!important
  .img-fluid
    transition width 250ms ease-in-out
  .nav-item
    letter-spacing 1px
    margin 0 1rem
    .nav-link
      &:hover
        text-decoration underline
        cursor pointer


.form-control
  border-radius 0
  color white

  &:not([type='submit'])
    background rgba(black, .2)

@media (max-width: 576px)
  .um-section
    &--products
      &__info
        margin 0
      .um-img
        &--glasses
          display none
  .um-box-container
    margin 1em -1em

@media (max-width: 768px)
  .um-section
    &--about
      .um-img
        &--about-us
          position relative
          right 0
          top 0
        &--circle
          height 30vh
          width 30vh
          border-radius 50% 50%
    &--products
      .um-img
        &--glasses
          margin 0

@media (max-width: 992px)
  .um-section
    &--about
      .um-img
        &--about-us
          right 0
          top 0
          background-position 30% 50%
    &--products
      &__info
        margin 0
      .um-img
        &--glasses
          height 75vh


